.card
  margin-bottom: 2%
  box-shadow: 0 2px 2px 0 rgba(0,0,0,0.14), 0 1px 5px 0 rgba(0,0,0,0.12), 0 3px 1px -2px rgba(0,0,0,0.2)
  display: flex
  flex: 0 100%
  flex-direction: column

  @media only screen and (min-width: 48em)
    flex: 0 (96/3)%

  &-container
    max-width: 1000px
    margin: auto
    position: relative
    z-index: 1
    display: flex
    flex-wrap: wrap
    justify-content: space-around

  &__title
    text-decoration: none
    margin: .1rem 0

  &__button
    background: none
    box-shadow: 100 100 100 #000
    border: none
    width: 100%
    background: red
    color: #FFF
    padding: .5rem .6rem

  &__logo
    background: rgba(255,255,255,.8)
    padding: 15px
    height: 200px
    display: table

  &__content
    padding: 0 15px 15px 15px
    background: rgba(255,255,255,.8)
    flex: 1

    p
      margin: .4rem 0

