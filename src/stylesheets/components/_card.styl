.card
  $margin=10px
  height: 100%
  margin: 0 $margin $margin 0
  background: rgba(255,255,255,.8)
  text-align: center

  &-container
    display: flex
    justify-content: space-around
    flex-wrap: wrap

    &__cols
      margin-bottom: $margin
      flex: 0 100%

      @media only screen and (min-width: 48em)
        flex: 0 (100/3)%

    &__button
      background: none
      box-shadow: 100 100 100 #000
      border: none
      border-radius: 5px
      border: 2px solid red
      color: red
      padding: .5rem .6rem
