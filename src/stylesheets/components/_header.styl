.header
  width: 100%
  height: 300px
  display: inline-block
  text-align: center

  &:before
    background: linear-gradient(to right, red, blue, orange, blue)
    content: ''
    width: 100%
    height: 6px
    display: block
    position: relative
    z-index: 1

  &__title
    font-family: 'Lato'
    font-weight: 900
    font-size: 3rem

.search
  background: rgba(255, 255, 255, .6)
  border: none
  font-size: 2em
  padding: 10px
  width: 100%
  border-radius: 5px
  transition: all 1s ease

  &:focus
    background: lighten(#000, 80%)
    border-color: lighten(#000, 80%)
    color: #FFF
    outline: none
