/*
 *  Import web-fonts via @font-face
 */

@font-face
    font-family: "Lato"
    font-style: normal
    font-weight: 300
    font-stretch: normal

    src: url($font-path + 'lato/lato-light.eot');  /* IE9 Compat Modes */

    src: local('Lato'), /* Set Fallback Local Font */\
         url($font-path + 'lato/lato-light.eot?#iefix') format('embedded-opentype'), /*IE6-IE8*/\
         url($font-path + 'lato/lato-light.woff') format('woff'), /*Modern Browsers*/\
         url($font-path + 'lato/lato-light.ttf')  format('truetype'), /*Safari, Android, iOS*/\
         url($font-path + 'lato/lato-light.svg#latolight') format('svg'); /*Legacy iOS*/

