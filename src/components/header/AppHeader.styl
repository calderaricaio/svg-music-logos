.header
  width: 100%
  text-align: center

  p
    color: #FFF
    font-weight: 300
    font-size: 1.2rem
    margin: .6rem
    letter-spacing: .03rem

    &:last-of-type
      margin-bottom: 1.5rem

  &:before
    background: linear-gradient(141deg, complement(#2cb5e8) 0%, complement(#1fc8db) 31%, complement(#0fb8ad) 55%)
    content: ''
    height: 6px
    display: block
    position: relative
    z-index: 1

  &__link-title
    font-family: 'Lato'
    font-weight: 900
    font-size: 3rem
    color: #FFF
    text-decoration: none

  &__subtitle
    display: block
    font-size: 1.2rem
    color: #FFF
    font-weight: normal

  &__main
    max-width: 1000px
    z-index: 1
    position: relative
    margin: auto
    padding: 0 20px

    @media only screen and (min-width: 1000px)
      padding: 0

.link
  color: darken(red, 15%)
  font-weight: bold

  &:hover
    color: lighten(blue, 28%)

.search
  border: none
  font-size: 1.8em
  padding: 10px
  width: 100%
  border-radius: 5px
  background-color: rgba(255, 255, 255, .3)
  transition: all 1s ease
  font-weight: 300
  margin-bottom: 10px

  &:focus
    background-color: rgba(255, 255, 255, .9)
    border-color: #FFF
    outline: none

.filter
  text-align: right
  color: #FFF
  font-size: 1.5rem
  font-weight: 300

.select
  appearance: none
  font-size: 1rem
  font-weight: 300
  letter-spacing: .009rem
  padding: .4rem
  border: none
  background: transparent url("../../img/arrow.svg") center right no-repeat
  padding-right: 20px
  background-size: 18px 18px
  color: white
  margin-bottom: 20px

  option
    color: black
